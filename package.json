{
  "name": "node-typescript-boilerplate",
  "version": "0.1.0",
  "description": "A minimalist Node.js TypeScript boilerplate with eslint, jest, nodemon, and prettier.",
  "author": "Scott Mathieson <scott@eingress.io>",
  "license": "ISC",
  "keywords": [
    "eslint",
    "jest",
    "node",
    "prettier",
    "typescript"
  ],
  "scripts": {
    "build": "yarn build:clean && tsc",
    "build:clean": "rimraf dist/*",
    "build:watch": "yarn build -w",
    "coverage": "jest --collectCoverageFrom=src/**/*.js --coverage",
    "lint": "tsc --noEmit && eslint './{,{__tests__,src}/**/}*.{js,jsx,ts,tsx}' --fix --quiet",
    "prestart": "yarn build",
    "start": "node dist/index.js",
    "start:dev": "nodemon src/index.ts",
    "test": "jest --silent",
    "test:watch": "jest --silent --watch"
  },
  "dependencies": {},
  "devDependencies": {
    "@babel/cli": "7.10.5",
    "@babel/core": "7.11.1",
    "@babel/preset-env": "7.11.0",
    "@types/jest": "26.0.9",
    "@types/node": "14.0.27",
    "@typescript-eslint/eslint-plugin": "3.9.0",
    "@typescript-eslint/parser": "3.9.0",
    "eslint": "7.6.0",
    "eslint-config-prettier": "6.11.0",
    "eslint-plugin-prettier": "3.1.4",
    "jest": "26.4.0",
    "nodemon": "2.0.4",
    "prettier": "2.0.5",
    "rimraf": "3.0.2",
    "ts-jest": "26.2.0",
    "ts-node": "8.10.2",
    "typescript": "3.9.7"
  }
}
