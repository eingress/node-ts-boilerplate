{
  "name": "node-typescript-boilerplate",
  "version": "0.1.0",
  "description": "A minimalist Node.js TypeScript boilerplate with eslint, jest, nodemon, and prettier.",
  "author": "Scott Mathieson <scott@eingress.io>",
  "license": "ISC",
  "keywords": [
    "eslint",
    "jest",
    "node",
    "prettier",
    "typescript"
  ],
  "scripts": {
    "build": "yarn build:clean && tsc",
    "build:clean": "rimraf dist/*",
    "build:watch": "yarn build -w",
    "coverage": "jest --collectCoverageFrom=src/**/*.js --coverage",
    "lint": "tsc --noEmit && eslint './{,{__tests__,src}/**/}*.{js,jsx,ts,tsx}' --fix --quiet",
    "prestart": "yarn build",
    "start": "node dist/index.js",
    "start:dev": "nodemon src/index.ts",
    "test": "jest --silent",
    "test:watch": "jest --silent --watch"
  },
  "dependencies": {},
  "devDependencies": {
    "@babel/cli": "7.23.0",
    "@babel/core": "7.23.2",
    "@babel/preset-env": "7.23.2",
    "@types/jest": "29.5.6",
    "@types/node": "20.8.7",
    "@typescript-eslint/eslint-plugin": "6.8.0",
    "@typescript-eslint/parser": "6.8.0",
    "eslint": "8.51.0",
    "eslint-config-prettier": "9.0.0",
    "eslint-plugin-prettier": "5.0.1",
    "jest": "29.7.0",
    "nodemon": "3.0.1",
    "prettier": "3.0.3",
    "rimraf": "5.0.5",
    "ts-jest": "29.1.1",
    "ts-node": "10.9.1",
    "typescript": "5.2.2"
  }
}
