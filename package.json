{
  "name": "node-typescript-boilerplate",
  "version": "0.1.0",
  "description": "A minimalist Node.js TypeScript boilerplate with eslint, jest, nodemon, and prettier.",
  "author": "Scott Mathieson <scott@eingress.io>",
  "license": "ISC",
  "keywords": [
    "eslint",
    "jest",
    "node",
    "prettier",
    "typescript"
  ],
  "scripts": {
    "build": "yarn build:clean && tsc",
    "build:clean": "rimraf dist/*",
    "build:watch": "yarn build -w",
    "coverage": "jest --collectCoverageFrom=src/**/*.js --coverage",
    "lint": "tsc --noEmit && eslint './{,{__tests__,src}/**/}*.{js,jsx,ts,tsx}' --fix --quiet",
    "prestart": "yarn build",
    "start": "node dist/index.js",
    "start:dev": "nodemon src/index.ts",
    "test": "jest --silent",
    "test:watch": "jest --silent --watch"
  },
  "dependencies": {},
  "devDependencies": {
    "@babel/cli": "7.14.8",
    "@babel/core": "7.15.0",
    "@babel/preset-env": "7.15.0",
    "@types/jest": "27.0.1",
    "@types/node": "16.7.0",
    "@typescript-eslint/eslint-plugin": "4.29.2",
    "@typescript-eslint/parser": "4.29.2",
    "eslint": "7.32.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-prettier": "3.4.0",
    "jest": "27.0.6",
    "nodemon": "2.0.12",
    "prettier": "2.3.2",
    "rimraf": "3.0.2",
    "ts-jest": "27.0.5",
    "ts-node": "10.2.1",
    "typescript": "4.3.5"
  }
}
