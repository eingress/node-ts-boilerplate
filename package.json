{
  "name": "node-typescript-boilerplate",
  "version": "0.1.0",
  "description": "A minimalist Node.js TypeScript boilerplate with eslint, jest, nodemon, and prettier.",
  "author": "Scott Mathieson <scott@eingress.io>",
  "license": "ISC",
  "keywords": [
    "eslint",
    "jest",
    "node",
    "prettier",
    "typescript"
  ],
  "scripts": {
    "build": "yarn build:clean && tsc",
    "build:clean": "rimraf dist/*",
    "build:watch": "yarn build -w",
    "coverage": "jest --collectCoverageFrom=src/**/*.js --coverage",
    "lint": "tsc --noEmit && eslint './{,{__tests__,src}/**/}*.{js,jsx,ts,tsx}' --fix --quiet",
    "prestart": "yarn build",
    "start": "node dist/index.js",
    "start:dev": "nodemon src/index.ts",
    "test": "jest --silent",
    "test:watch": "jest --silent --watch"
  },
  "dependencies": {},
  "devDependencies": {
    "@babel/cli": "7.7.7",
    "@babel/core": "7.7.7",
    "@babel/preset-env": "7.7.7",
    "@types/jest": "24.0.25",
    "@types/node": "13.1.4",
    "@typescript-eslint/eslint-plugin": "2.15.0",
    "@typescript-eslint/parser": "2.15.0",
    "eslint": "6.8.0",
    "eslint-config-prettier": "6.9.0",
    "eslint-plugin-prettier": "3.1.2",
    "jest": "24.9.0",
    "nodemon": "2.0.2",
    "prettier": "1.19.1",
    "rimraf": "3.0.0",
    "ts-jest": "24.3.0",
    "ts-node": "8.5.4",
    "typescript": "3.7.4"
  }
}
